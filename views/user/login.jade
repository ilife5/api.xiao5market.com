extends ../layout

block content
    div.col-md-4.col-md-offset-4
        div.login-panel.panel.panel-default
            div.panel-heading
                h3.panel-title 登录
            div.panel-body
                form(role="form", action="/users/login", method="post")
                    fieldset
                        div.form-group
                            input.form-control(name="name", placeholder="用户名")
                        div.form-group
                            input.form-control(name="pwd", placeholder="密码")
                        button.btn.btn-lg.btn-success.btn-block(type="submit")
                            | Login